<h1><%= @category.name %></h1>
<div id="show_category">
  <% @hobbies.each do |hobby| %>
  <div class="tile hobby_link"><%= link_to hobby.name, hobby %></div>
  <% end %>
</div>

<script id="category_template" type="text/x-handlebars-template">
  <ul>
  {{#each hobbies}}
    <li><a class="hobby_link" href="/hobbies/{{id}}">{{name}}</a></li>
  {{/each}}
  </ul>
</script>
