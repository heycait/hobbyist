<h1><%= @category.name %></h1>
<div id="show_category">
  <% @hobbies.each do |hobby| %>
    <div class="hobby tile hover">
      <div class="front">
        <div class="pad">
          <%= link_to hobby.name, hobby %>
        </div>
      </div>
      <div class="back">
        <div class="pad">
          <%= link_to hobby.name, hobby %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Create New Hobby", new_hobby_path %>
<button class="add_question_button" data-reveal-id="new-hobby-modal">Create New Hobby</button>

<div id="new-hobby-modal" class="<%= @category.id %> reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Create your hobby</h2>
  <p class="lead"></p>
  <%= form_for @hobby do |f| %>

  <% if @hobby.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@hobby.errors.count, "error") %> prohibited this article from being saved:</h4>

      <ul>
      <% @hobby.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :name, placeholder: 'Name' %>
    <%= f.text_area :description, placeholder: 'Description' %>

    <div class="field">
      <%= f.label :image %><br/>
      <%= f.file_field :image_url %>
    </div>

    <%= f.submit %>
  <% end %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
