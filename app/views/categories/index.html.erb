<h1>Categories</h1>
<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<br><br>

<div id="category_list">
  <% @categories.each do |category| %>
    <div class="category tile hover">
      <div class="front">
        <div class="pad">
          <%= link_to category.name, category %>
        </div>
      </div>
      <div class="back">
        <div class="pad">
          <%= link_to category.name, category %>
        </div>
      </div>
    </div>
  <% end %>
</div>
