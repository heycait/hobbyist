<div class="large-3 large-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">
    <form>

       <div class="row">
         <div class="large-12 columns">
             <input type="text" name="username" placeholder="Username" />
         </div>
       </div>
      <div class="row">
         <div class="large-12 columns">
             <input type="password" name="password" placeholder="Password" />
         </div>
      </div>
      <div class="row">
        <div class="large-12 large-centered columns">
          <input type="submit" class="button expand" value="Log In"/>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>


<video id="video" autoplay="autoplay" loop>
  <source src="/videos/30sec.webm" type="video/webm">
</video>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {'data-abide' => ''}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-wrapper">
    <label>Username <small>required</small>
      <%= f.text_field :username, autofocus: true, placeholder: :username, required: true %>
    </label>
    <small class="error">Username is required.</small>
  </div>

  <div class="field input-wrapper">
    <label>Email <small>required</small>
      <%= f.email_field :email, autofocus: true, placeholder: :email, required: true %>
    </label>
    <small class="error">An email address is required.</small>
  </div>

  <div class="field input-wrapper">
    <% if @minimum_password_length %>
    <label>Password <small><em>(<%= @minimum_password_length %> characters minimum)</em></small>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: :password, required: true %>
    </label>
    <small class="error">Password is required.</small>
  </div>

  <div class="field input-wrapper">
    <label>Email <small>required</small>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", required: true %>
    </label>
    <small class="error">Password must match.</small>
  </div>

  <div class="field input-wrapper">
    <label>Image <small>optional</small>
      <%= f.file_field :image_url %>
    </label>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>