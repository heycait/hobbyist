<video id="video" autoplay="autoplay" loop>
  <source src="/videos/30sec.webm" type="video/webm">
</video>

<div class="large-4 large-centered columns">
  <div class="login-box">
    <div class="row">
      <div class="large-12 columns">
        <h3> Hobbyist </h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <form>
          <div class="row">
            <div class="large-12 columns">
              <div class="fb-login">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <%= f.text_field :username, autofocus: true, placeholder: :username %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <%= f.email_field :email, autofocus: true, placeholder: :email %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <%= f.password_field :password, autocomplete: "off", placeholder: :"minimum of 8 characters"  %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 large-centered columns">
              <%= f.submit "Sign up", class: "button expand" %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 large-centered columns">
              <h6>Already Have An Account?
                <% if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
                <% end -%>
              </h6>
            </div>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>



