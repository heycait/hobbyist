<video id="video" autoplay="autoplay" loop>
  <source src="/videos/30sec.webm" type="video/webm">
</video>

<div class="large-3 large-centered columns large-4 large-centered columns medium-5 medium-centered columns small-8 small-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">
    <h3> Hobbyist </h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <form>

     <div class="row">
      <div class="large-12 columns">
        <%= f.email_field :email, autofocus: true, placeholder: :email %>
       </div>
     </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
         </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end -%>
        </div>
      </div>

      <div class="row">
        <div class="large-12 large-centered columns">
          <%= f.submit "Login", class: "button expand" %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 large-centered columns">
          <h6>Can't log in?
            <%= link_to "Reset Password", new_password_path(resource_name) %><br />
          </h6>
        </div>
      </div>

      <div class="row">
        <div class="large-12 large-centered columns">
          <h6>Don't Have An Account?
            <%= link_to "Sign Up", new_registration_path(resource_name) %>
          <br />
          </h6>
        </div>
      </div>
    </form>
    <% end %>
  </div>
</div>
</div>
</div>
