<div id="hobby_header">
  <h3 id="hobby_title"><%= @hobby.name %></h3>
  <p><%= @hobby.description %></p>
  <img src="<%= @hobby.image_url %>">
  <% if current_user.id == @hobby.creator_id %>
    <%= form_for @hobby do |f| %>
      <div class="field">
        <%= f.label 'Update Hobby Image' %><br/>
        <%= f.file_field :image_url %>
        <%= f.submit 'Update' %>
      </div>
    <% end %>
  <% end %>

  <button class="follow" href="/hobbies/<%= @hobby.id %>/follow" role="button"><%= follow_unfollow(@hobby) %></button>
</div>

<div id="meetups">
  <% if @meetups %>
    <h4>Upcoming Meetup Events</h4>
    <% @meetups.each do |meetup| %>
      <p>
        <%= format_time(meetup['time']) %>
        <a href="<%= meetup['event_url'] %>"><%= meetup['name'] %></a>
      </p>
    <% end %>
  <% else %>
    <h4>No Meetup Events</h4>
  <% end %>
</div>

<div id="questions">
  <h2>Questions</h2>
  <button id="add_question_button">Add question</button>
  <ul id="question_list" class="accordion" data-accordion>
    <% @questions.each do |question| %>
      <%= render "questions/question", question: question %>
    <% end %>
  </ul>
</div>

<div id="search-results">
  <iframe width="320" height="215" src="" allowfullscreen id="iframe"></iframe>'
</div>

<div>
  <h4>Followers</h4>
  <ul id="following_users">
    <% @hobby.users.each do |user| %>
      <li><%= link_to user.username, user %></li>
    <% end %>
  </ul>
</div>


